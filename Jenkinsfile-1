@Library('my-shared-lib') _

pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                buildApp()
            }
        }

        stage('Docker') {
            steps {
                dockerBuild("myapp:1.0")
                echo "Docker image built successfully"
            }
        }

        stage('Deploy') {
            steps {
                deployApp("prod")
                echo "Application deployed to production"
            }
        }
    }
}
